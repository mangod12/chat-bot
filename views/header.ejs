  <style media="screen">
    /* Chatter Bot */
    body{
      /* background: #bfbfbf; */
      background: #b7d0a5;
    }
    .chat-page{
      height: auto;
      margin-top: 30px;
      background-image: url('../third-party/_images/chat-background.png');
      background-attachment: fixed;
      /* background: #e5ddd5; */
      /* background: #d1d1d1; */
    }
    .chat-page-history{
      background: transparent;
      color: white;
      overflow: scroll;
      overflow-x: hidden;
      height: 460px;
    }

    .sender{
      float: left;
      padding: 0px;
      width: calc(100% - 25px);
      font-size: 0.9em;
    }
    .sender .chat-sender{
      background: #fff;
      color: #262626;
      float: left;
      display: inline-block;
      padding: 10px 15px;
      border-radius: 30px;
      max-width: 300px;
      line-height: 100%;
      word-wrap: break-word;
      letter-spacing: 0.1px;
      line-height: 1.3;
      font-size:16px;
      border-bottom-left-radius: 2px;
    }
    .receiver{
      float: right;
      padding: 0px;
      width: calc(100% - 25px);
      font-size: 0.9em;
    }
    .receiver .chat-receiver{
      background: #dcf8c6;
      color: #262626;
      float: right;
      display: inline-block;
      padding: 10px 15px;
      border-radius: 30px;
      max-width: 300px;
      line-height: 100%;
      word-wrap: break-word;
      letter-spacing: 0.1px;
      line-height: 1.3;
      font-size:16px;
      border-bottom-right-radius: 2px;
    }

    .chat-page-typing-and-sending{
      background: #f2f2f2;
      height: 70px;
    }
    .chat-typing{
      font-size: 16.5px;
      height: 65%;
      width: 100%;
      padding: 12px 20px;
      box-sizing: border-box;
      border: none;
      border-bottom: 2px solid #b7d0a5;
    }
    .chat-typing:focus{
      outline: none;
      border-bottom: 2px solid #4db6ac;
    }
    .chat-sending{
      margin-top: 15px;
      background: #2E7D32;
    }
    .load-chat{
      width:100px;
    }
    /* ./Chat Bot */
    /* Dashboard Tutorial Video */
    .input-group {
      display: table;
    }
    .input-group input, .suffix {
      display: table-cell;
    }
    .suffix {
      width:1%;
    }
    /* Video */
    .responsive-video{
      width: 400px;
    }
    .nav-mobile-profile{
      margin-top: 25px;
      margin-bottom: 10px;
      margin-left: 15px;
    }
  </style>
</head>
