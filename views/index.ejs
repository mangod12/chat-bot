<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <link href="/third-party/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link rel="stylesheet" href="node_modules/sweetalert2/dist/sweetalert2.min.css">
  <style media="screen">
  /* fallback */
    @font-face {
      font-family: 'Material Icons';
      font-style: normal;
      font-weight: 400;
      src: url(../third-party/materialize/flUhRq6tzZclQEJ-Vdg-IuiaDsNc.woff2) format('woff2');
    }
    .material-icons {
      font-family: 'Material Icons';
      font-weight: normal;
      font-style: normal;
      font-size: 24px;
      line-height: 1;
      letter-spacing: normal;
      text-transform: none;
      display: inline-block;
      white-space: nowrap;
      word-wrap: normal;
      direction: ltr;
      -webkit-font-feature-settings: 'liga';
      -webkit-font-smoothing: antialiased;
    }
    /* ./ Font Face */
    body{
      /* overflow-x: hidden;
      overflow-y: hidden; */
      background-image: url("http://localhost/_Project/man2/frontend/img/background-login-chatbot.png");
      height: 100%;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
    .rectangle-all-login{ margin-top: 70px; }
    .rectangle-asset-left-login{ color:white; margin-top:40px; }
    .rectangle-desc-left-login{ margin-top:0px; }
    .lupa-password{ margin-top:20px; }
    .tabs .tab a { color: #4caf50!important; }
    .tabs .indicator { background-color: #4caf50 !important; }
  </style>
</head>
<body>
  <div class="container rectangle-all-login">
      <div class="row">
        <div class="col l6 green darken-3 hide-on-small-only" style="height:540px;">
          <div class="rectangle-asset-left-login left">
            <h4 class="col l12">Mandaya BOT</h4>
            <p class="col l12 rectangle-desc-left-login">Sistem Informasi Terpusat Sekolah Melalui Aplikasi Chat.</p>
            <p class="col l12 rectangle-desc-left-login" style="font-size:30px;margin-top:-10px;color:#43a047">__________</p>
            <div class="col l12 rectangle-desc-left-login">
              <div class="row"> <div class="col l1"> <i class="material-icons">access_time</i> </div> <div class="col l11"> Respon yang cepat terhadap pengguna. </div> </div>
            </div>
            <div class="col l12 rectangle-desc-left-login">
              <div class="row"> <div class="col l1"> <i class="material-icons">accessibility</i> </div> <div class="col l11"> Kemampuan pelayanan dalam 24 jam. </div> </div>
            </div>
            <div class="col l12 rectangle-desc-left-login">
              <div class="row"> <div class="col l1"> <i class="material-icons">insert_chart</i> </div> <div class="col l11"> Kemudahan dalam memberikan informasi sekolah. </div> </div>
            </div>
          </div>
        </div>
        <div class="col l6 white">
          <ul class="tabs tabs-fixed-width tab-demo">
            <li class="tab"><a class="active" href="#pegawai">Pegawai</a></li>
            <li class="tab"><a href="#siswa">Siswa</a></li>
          </ul>
          <div style="margin-top:40px;">
            <div class="col l12">
              <div class="row">
                <div class="container">
                  <div id="pegawai">
                    <form method="post" action="/login_pegawai" id="form-login-chatbot-pegawai">
                      <center>
                        <img src="http://localhost/_Project/man2/frontend/img/guru.png" alt="logo man2" style="width:34%">
                      </center>
                      <div class="row" style="margin-top:20px;">
                        <input type="hidden" name="privilage" value="pegawai">
                        <div class="input-field col l12 s12">
                          <input name="username" id="icon_prefix" type="text" class="validate" autocomplete="on">
                          <label for="icon_prefix">Masukan Username</label>
                        </div>
                        <div class="input-field col l12 s12">
                          <input name="password" id="icon_telephone" type="password" class="validate">
                          <label for="icon_telephone">Masukan Password</label>
                        </div>
                        <div class="col l12 s12">
                        <button id="button-login-chatbot-pegawai" class="btn waves-effect green darken-3 waves-light" type="submit" style="width:100%;height:10%;margin-top:20px;">Masuk
                          <i class="material-icons right">send</i>
                        </button>
                        </div>
                        <div class="col l12 s12 lupa-password">
                          <a href="#modal-lupa-password-pegawai" class="modal-trigger" style="color:#999ea0">Lupa Password ?</a>
                        </div>
                      </div>
                    </form>
                  </div>
                  <div id="siswa">
                    <form method="post" action="/login_siswa" id="form-login-chatbot-siswa">
                      <center>
                        <img src="http://localhost/_Project/man2/frontend/img/siswa.png" alt="logo man2" style="width:28%">
                      </center>
                      <div class="row" style="margin-top:20px;">
                        <input type="hidden" name="privilage" value="siswa">
                        <div class="input-field col l12 s12">
                          <input name="username" id="icon_prefix" type="text" class="validate" autocomplete="on">
                          <label for="icon_prefix">Masukan Username</label>
                        </div>
                        <div class="input-field col l12 s12">
                          <input name="password" id="icon_telephone" type="password" class="validate">
                          <label for="icon_telephone">Masukan Password</label>
                        </div>
                        <div class="col l12 s12">
                        <button id="button-login-chatbot-siswa" class="btn waves-effect green darken-3 waves-light" type="submit" style="width:100%;height:10%;margin-top:20px;">Masuk
                          <i class="material-icons right">send</i>
                        </button>
                        </div>
                        <div class="col l12 s12 lupa-password">
                          <a href="#modal-lupa-password-siswa" class="modal-trigger" style="color:#999ea0">Lupa Password ?</a>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

  <!-- Modal Structure -->
  <!-- PEGAWAI -->
  <div id="modal-lupa-password-pegawai" class="modal">
    <form id="suggest-kosa-kata-form-pegawai" method="post">
      <div class="modal-content">
        <div class="container">
          <center>
            <p style="font-size:30px;">Lupa Password ?</p>
            <p style="margin-top:-20px;">Masukan Nomor Induk Pegawai untuk meminta password baru.</p>
            <div class="row" style="margin-top:25px;">
              <input type="hidden" name="category" value="pegawai">
              <div class="input-field col l12 s12">
                <input name="forgot_username" id="icon_telephone" type="text" class="validate">
                <label for="icon_telephone">Masukan Nomor Induk Pegawai (NIP)</label>
              </div>
              <div class="input-field col l12 s12">
                <input name="forgot_password" id="icon_telephone" type="password" class="validate">
                <label for="icon_telephone">Masukan Password Baru</label>
              </div>
            </div>
          </center>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#!" id="button-submit-forgot-password-pegawai" class="modal-close waves-effect waves-green green lighten-5 btn-flat">Minta</a>
        <a href="#!" class="modal-close waves-effect waves-red red lighten-5 btn-flat">Tutup</a>
      </div>
    </form>
  </div>
  <!-- SISWA -->
  <div id="modal-lupa-password-siswa" class="modal">
    <form id="suggest-kosa-kata-form-siswa" method="post">
      <div class="modal-content">
        <div class="container">
          <center>
            <p style="font-size:30px;">Lupa Password ?</p>
            <p style="margin-top:-20px;">Masukan Nomor Induk Siswa untuk meminta password baru.</p>
            <div class="row" style="margin-top:25px;">
              <input type="hidden" name="category" value="siswa">
              <div class="input-field col l12 s12">
                <input name="forgot_username" id="icon_telephone" type="text" class="validate">
                <label for="icon_telephone">Masukan Nomor Induk Siswa (NIS)</label>
              </div>
              <div class="input-field col l12 s12">
                <input name="forgot_password" id="icon_telephone" type="password" class="validate">
                <label for="icon_telephone">Masukan Password Baru</label>
              </div>
            </div>
          </center>
        </div>
      </div>
      <div class="modal-footer">
        <a href="#!" id="button-submit-forgot-password-siswa" class="modal-close waves-effect waves-green green lighten-5 btn-flat">Minta</a>
        <a href="#!" class="modal-close waves-effect waves-red red lighten-5 btn-flat">Tutup</a>
      </div>
    </form>
  </div>

<script src="/third-party/jquery-3.3.1.min.js"></script>
<script src="/third-party/materialize/js/materialize.min.js"></script>
<script type="text/javascript" src="node_modules/sweetalert2/dist/sweetalert2.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    $('.tabs').tabs();
    $('.modal').modal();
    $('#button-submit-forgot-password-pegawai').on('click', function(){
      $.ajax({
        type : 'POST',
        url : '/forgot_password',
        data : $('#suggest-kosa-kata-form-pegawai').serialize(),
        success : function(response){
          alert(response)
        }
      })
    })
    $('#button-submit-forgot-password-siswa').on('click', function(){
      $.ajax({
        type : 'POST',
        url : '/forgot_password',
        data : $('#suggest-kosa-kata-form-siswa').serialize(),
        success : function(response){
          alert(response)
        }
      })
    })

  });
</script>

</body>
</html>
